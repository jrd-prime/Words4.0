<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        tools:context=".ActivityHome"
        android:background="@color/colorPrimary"
        tools:ignore="ContentDescription">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent">


        <FrameLayout android:layout_height="64dp" android:layout_width="64dp" android:padding="8dp">
            <RelativeLayout android:layout_height="48dp" android:layout_width="48dp">
                <ImageView
                        android:id="@+id/uProfilePhoto"
                        android:layout_width="48dp"
                        android:layout_height="48dp"/>
            </RelativeLayout>

            <RelativeLayout android:layout_height="48dp" android:layout_width="48dp">
                <ImageView
                        android:src="@drawable/circle"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
            </RelativeLayout>
        </FrameLayout>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/menu_bnm"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginStart="0dp"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:menu="@menu/bnm"/>

</androidx.constraintlayout.widget.ConstraintLayout>